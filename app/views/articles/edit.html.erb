<h3 class='text-center'>Editing an Article</h3>
<div class='row w-100 '>
  <div class='col-md-12'>
    <%= simple_form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class='form-group d-flex justify-content-center'>
      <div class='col-md-11'>
        <%= f.input :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
      </div>
    </div>
    <div class='form-group d-flex justify-content-center'>
      <div class='col-md-11'>
        <%= f.input :body, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
      </div>
    </div>
    <div class='form-group d-flex justify-content-center'>
      <div class='col-md-11'>
        <%= f.input :author, class: 'form-control', placeholder: "Author's name", autofocus: true %>
      </div>
    </div>
    <div class='form-group d-flex justify-content-center'>
      <div class='col-md-11'>
        <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
