<div class="container">
  <div class="row d-flex justify-content-center">
    <h1 class="text-center col-sm-12 col-md-8 col-lg-7"><%= @article.title %></h1>
    <div class="d-flex justify-content-center col-sm-12 col-md-8 col-lg-7 my-3">
      <%= @article.body %>
    </div>
    <div class="d-flex justify-content-center col-sm-12 col-md-8 col-lg-7">
      <%= @article.created_at.strftime("%b %d - %Y at %H h %M") %>
    </div>
  </div>
</div>
